<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ece558.pdx.edu.project3.LocationUpdate">

    <!-- TODO: EditText UI Control for get_location text box -->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/get_Location"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <!-- TODO: Button UI Control for Current Location -->

    <!-- TODO: TextView UI Control to save address on UI -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/saveAddress"
        android:textSize="20sp"
        android:layout_alignTop="@+id/currentLocation"
        android:layout_marginTop="89dp"
        android:layout_marginBottom="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/Send_Button"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/Send_Button"
        android:layout_alignTop="@+id/Send_Message"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:id="@+id/Send_Message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/Send_Button"
        android:layout_toStartOf="@+id/Send_Button" />

    <Button
        android:id="@+id/currentLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_Location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="@string/currentLocation"/>

</RelativeLayout>
